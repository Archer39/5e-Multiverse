svg","documentId":null,"flags":{}},{"type":0,"weight":1,"range":[16,16],"drawn":false,"documentCollection":"","_id":"rIEsr5Cne85JRA2n","text":"Il personaggio ha l’istinto dominante di mangiare qualcosa di strano, che sia immondizia, fango o feci.","img":"icons/svg/d20-black.svg","documentId":null,"flags":{}},{"type":0,"weight":1,"range":[17,18],"drawn":false,"documentCollection":"","_id":"fb7Boxvnpcvg8klM","text":"Il personaggio è stordito.","img":"icons/svg/d20-black.svg","documentId":null,"flags":{}},{"type":0,"weight":1,"range":[19,20],"drawn":false,"documentCollection":"","_id":"B7BFqUpFmwPQMRlY","text":"Il personaggio cade privo di sensi.","img":"icons/svg/d20-black.svg","documentId":null,"flags":{}}],"formula":"d20","replacement":true,"displayRoll":true,"ownership":{"default":0,"ofPRaS27mgPnSNVL":3},"flags":{"core":{"sourceId":"RollTable.EXPbBynlzmOWeDZe"}},"_stats":{"systemId":"dnd5e","systemVersion":"2.0.3","coreVersion":"10.291","createdTime":1674560158989,"modifiedTime":1674561432555,"lastModifiedBy":"ofPRaS27mgPnSNVL"},"folder":null,"sort":0,"_id":"yWI2i2HhuHwMJWvP"}
